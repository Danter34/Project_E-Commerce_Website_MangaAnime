@model IEnumerable<Atsumaru.Models.Delivery>

@{
    ViewData["Title"] = "Quản lý Đơn hàng";
}

<h1>Quản lý Đơn hàng</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryPlaced)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @item.DeliveryPlaced.ToString("dd/MM/yyyy HH:mm") @* Định dạng ngày giờ cho dễ đọc *@
                </td>
                <td>
                    @item.DeliveryTotal.ToString()đ @* Định dạng tiền tệ *@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Cập nhật trạng thái</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Xem chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>